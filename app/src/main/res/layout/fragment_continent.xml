<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customDarkColor"
    tools:context=".ContinentFragment">

    <TextView
        android:id="@+id/textViewError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/customPrimaryColor"
        android:text="API access overload error, please try again multiple times"
        android:textSize="18dp"
        android:textAlignment="center"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/loadingImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/soon"
        android:visibility="gone" />
    <ListView
        android:id="@+id/listViewItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>